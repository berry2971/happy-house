<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.ssafy.happyhouse.mapper.BlacklistMapper">

    <insert id="add" parameterType="java.lang.String">
        INSERT INTO blacklist(id)
        VALUES (#{id});
    </insert>

    <select id="findById" resultType="java.lang.String">
        SELECT id
        FROM blacklist
        WHERE id = #{id};
    </select>

    <delete id="remove">
        DELETE FROM blacklist
        WHERE id = #{id};
    </delete>

</mapper>